{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                { "slug": "primary", "color": "#00ff88", "name": "Primary" },
                { "slug": "contrast", "color": "#ffffff", "name": "Contrast" },
                { "slug": "base", "color": "#0a0a0a", "name": "Base" },
                { "slug": "accent", "color": "#1a1a1a", "name": "Accent" },
                { "slug": "muted", "color": "#a3a3a3", "name": "Muted" },
                { "slug": "highlight", "color": "#ff0080", "name": "Highlight" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "slug": "sans",
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
                    "name": "Inter"
                },
                {
                    "slug": "mono",
                    "fontFamily": "'JetBrains Mono', ui-monospace, monospace",
                    "name": "JetBrains Mono"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.875rem", "name": "Small" },
                { "slug": "medium", "size": "1rem", "name": "Medium" },
                { "slug": "large", "size": "1.25rem", "name": "Large" },
                { "slug": "x-large", "size": "2rem", "name": "Extra Large" },
                { "slug": "xx-large", "size": "3.5rem", "name": "Huge" }
            ]
        },
        "spacing": {
            "units": ["px", "rem", "%", "vw"],
            "spacingSizes": [
                { "slug": "10", "size": "0.25rem", "name": "1" },
                { "slug": "20", "size": "0.5rem", "name": "2" },
                { "slug": "30", "size": "1rem", "name": "3" },
                { "slug": "40", "size": "1.5rem", "name": "4" },
                { "slug": "50", "size": "2.5rem", "name": "5" },
                { "slug": "60", "size": "4rem", "name": "6" },
                { "slug": "70", "size": "5rem", "name": "7" },
                { "slug": "80", "size": "7rem", "name": "8" }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--sans)",
            "lineHeight": "1.5"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--highlight)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "border": {
                    "radius": "8px"
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700",
                    "letterSpacing": "-0.02em"
                }
            }
        }
    }
}

