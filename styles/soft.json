{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                { "slug": "primary", "color": "#7c9eb2", "name": "Primary" },
                { "slug": "contrast", "color": "#2d3748", "name": "Contrast" },
                { "slug": "base", "color": "#faf9f7", "name": "Base" },
                { "slug": "accent", "color": "#f0ebe3", "name": "Accent" },
                { "slug": "muted", "color": "#718096", "name": "Muted" },
                { "slug": "warm", "color": "#d4a574", "name": "Warm" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "slug": "sans",
                    "fontFamily": "'DM Sans', -apple-system, sans-serif",
                    "name": "DM Sans"
                },
                {
                    "slug": "serif",
                    "fontFamily": "'Playfair Display', Georgia, serif",
                    "name": "Playfair Display"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.875rem", "name": "Small" },
                { "slug": "medium", "size": "1rem", "name": "Medium" },
                { "slug": "large", "size": "1.125rem", "name": "Large" },
                { "slug": "x-large", "size": "1.5rem", "name": "Extra Large" },
                { "slug": "xx-large", "size": "2.25rem", "name": "Huge" }
            ]
        },
        "spacing": {
            "units": ["px", "rem", "%", "vw"],
            "spacingSizes": [
                { "slug": "10", "size": "0.25rem", "name": "1" },
                { "slug": "20", "size": "0.5rem", "name": "2" },
                { "slug": "30", "size": "1rem", "name": "3" },
                { "slug": "40", "size": "1.5rem", "name": "4" },
                { "slug": "50", "size": "2rem", "name": "5" },
                { "slug": "60", "size": "3rem", "name": "6" },
                { "slug": "70", "size": "4rem", "name": "7" },
                { "slug": "80", "size": "5rem", "name": "8" }
            ]
        },
        "layout": {
            "contentSize": "720px",
            "wideSize": "1100px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--sans)",
            "lineHeight": "1.7"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "border": {
                    "radius": "24px"
                },
                "typography": {
                    "fontWeight": "500"
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--serif)",
                    "fontWeight": "500"
                }
            }
        }
    }
}

