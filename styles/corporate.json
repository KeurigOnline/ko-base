{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                { "slug": "primary", "color": "#0066cc", "name": "Primary" },
                { "slug": "contrast", "color": "#1e293b", "name": "Contrast" },
                { "slug": "base", "color": "#ffffff", "name": "Base" },
                { "slug": "accent", "color": "#f1f5f9", "name": "Accent" },
                { "slug": "muted", "color": "#64748b", "name": "Muted" },
                { "slug": "success", "color": "#16a34a", "name": "Success" },
                { "slug": "warning", "color": "#ca8a04", "name": "Warning" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "slug": "sans",
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
                    "name": "Inter"
                },
                {
                    "slug": "mono",
                    "fontFamily": "ui-monospace, SFMono-Regular, monospace",
                    "name": "Mono"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.875rem", "name": "Small" },
                { "slug": "medium", "size": "1rem", "name": "Medium" },
                { "slug": "large", "size": "1.125rem", "name": "Large" },
                { "slug": "x-large", "size": "1.5rem", "name": "Extra Large" },
                { "slug": "xx-large", "size": "2.5rem", "name": "Huge" }
            ]
        },
        "spacing": {
            "units": ["px", "rem", "%", "vw"],
            "spacingSizes": [
                { "slug": "10", "size": "0.25rem", "name": "1" },
                { "slug": "20", "size": "0.5rem", "name": "2" },
                { "slug": "30", "size": "1rem", "name": "3" },
                { "slug": "40", "size": "1.5rem", "name": "4" },
                { "slug": "50", "size": "2rem", "name": "5" },
                { "slug": "60", "size": "3rem", "name": "6" },
                { "slug": "70", "size": "4rem", "name": "7" },
                { "slug": "80", "size": "5rem", "name": "8" }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1280px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--sans)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "textDecoration": "underline"
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "border": {
                    "radius": "6px"
                },
                "typography": {
                    "fontWeight": "500"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "600"
                }
            }
        }
    }
}

